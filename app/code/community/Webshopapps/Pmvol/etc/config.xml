<config>
    <modules>
        <Webshopapps_Pmvol>
            <version>0.1.0</version>
        </Webshopapps_Pmvol>
    </modules>
    <global>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <ship_depth/>
                        <ship_width/>
                        <ship_height/>
                    </product_attributes>
                </item>
            </quote>
        </sales>
    </global>

    <productmatrix>
        <specialvars>
            <volume>1</volume>
        </specialvars>
    </productmatrix>


    <default>
        <carriers>
            <productmatrix>
                <calculate_greater_volume>1</calculate_greater_volume>
                <volume_multiplier>1</volume_multiplier>
            </productmatrix>
        </carriers>
    </default>
</config>
